{
  "name": "tippen-lernen",
  "version": "1.0.0",
  "description": "Ein Tipp-Lernspiel f√ºr die deutsche Tastatur",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win"
  },
  "author": "Bastian",
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.bastian.tippenlernen",
    "files": [
      "main.js",
      "TippenLernen.html",
      "script.js",
      "style.css",
      "data/**/*",
      "audio/**/*",
      "icon.png"
    ],
    "linux": {
      "target": [
        "flatpak"
      ],
      "category": "Game",
      "icon": "icon.png"
    },
    "flatpak": {
      "useWaylandFlags": true,
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "23.08",
      "sdk": "org.freedesktop.Sdk"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "node-fetch": "^3.3.2"
  }
}
